sp {self*elaborate*stopped
   (state <s> ^name robot
              ^io.input-link <input>
              ^parameters.stopped-dead-zone-squared <dz>)
   (<input> ^self <self>)
   (<self> ^pose <pose>)
   (<pose> -^x-velocity > <dz>
           -^y-velocity > <dz>)
-->
   (<self> ^stopped yes)}

sp {self*elaborate*stopped*no1
   (state <s> ^name robot
              ^io.input-link.self <self>)
  -(<self> ^stopped yes)
-->
   (<self> ^stopped no)}